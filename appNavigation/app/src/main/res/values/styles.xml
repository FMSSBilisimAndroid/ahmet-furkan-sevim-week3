<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">#fff</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="cardTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="icon">
        <item name="android:contentDescription">@string/icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">374dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:backgroundTint">#EBEAEC</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>
</resources>